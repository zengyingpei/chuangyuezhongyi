.body {
  display: flex;
  align-items: center;
}
.body .box {
  width: 750rpx;
  display: flex;
  height: 300rpx;
  margin-top: 450rpx;
}
.body .box .left {
  width: 50%;
  height: 100%;
}
.body .box .left .left_box {
  margin-left: 35rpx;
  border-radius: 30rpx;
  width: 80%;
  height: 100%;
  display: flex;
  justify-content: center;
  flex-wrap: wrap;
}
.body .box .left .left_box .icon {
  width: 200rpx;
  height: 200rpx;
}
.body .box .left .left_box .icon image {
  width: 200rpx;
  height: 200rpx;
}
.body .box .left .left_box .text {
  text-align: center;
  width: 100%;
  font-size: 50rpx;
}
