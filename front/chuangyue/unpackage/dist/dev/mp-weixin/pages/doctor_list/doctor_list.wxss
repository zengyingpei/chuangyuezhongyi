.search-container {
  display: flex;
  align-items: center;
  padding: 20rpx;
  background-color: #f5f5f5;
}
.search-container .search-input {
  flex: 1;
  height: 60rpx;
  padding: 0 20rpx;
  font-size: 30rpx;
  border-radius: 30rpx;
  border: 1rpx solid #ccc;
}
.search-container .search-btn {
  height: 60rpx;
  min-width: 80rpx;
  line-height: 60rpx;
  text-align: center;
  border-radius: 30rpx;
  background-color: #007aff;
  color: #fff;
  margin-left: 20rpx;
  border: none;
  outline: none;
}
.section {
  display: flex;
  background-color: #f5f5f5;
  width: 100%;
  border-bottom: 2rpx solid #cccccc;
}
.section .section_left {
  width: 50%;
  display: flex;
  justify-content: center;
}
.section .section_left .section_title {
  height: 60rpx;
}
.section .section_left .section_content {
  color: #7ca0ec;
}
.section .section_right {
  width: 50%;
  display: flex;
  justify-content: center;
}
.section .section_right .section_content {
  color: #7ca0ec;
}
.doc_card {
  width: 690rpx;
  margin: 20rpx auto;
  border: 1px solid #eee;
  border-radius: 20rpx;
  box-shadow: 0 0 30rpx rgba(0, 0, 0, 0.06);
  display: flex;
}
.doc_card .doc_left_img {
  margin: 20rpx 20rpx;
  width: 200rpx;
  height: 200rpx;
}
.doc_card .doc_left_img .doc_images {
  width: 180rpx;
  height: 180rpx;
  border-radius: 50%;
}
.doc_card .doc_right_info .doc_info_top {
  width: 420rpx;
  height: 66rpx;
  overflow: hidden;
  padding-top: 20rpx;
}
.doc_card .doc_right_info .doc_info_top .doc_name {
  font-weight: bold;
  font-size: 50rpx;
  margin-right: 10rpx;
}
.doc_card .doc_right_info .doc_info_top .doc_description {
  font-size: 28rpx;
}
.doc_card .doc_right_info .doc_info_bom {
  margin-top: 5rpx;
}
.doc_card .doc_right_info .doc_info_bom .doc_info_bom_up {
  font-size: 28rpx;
  font-style: italic;
  margin-bottom: 5rpx;
}