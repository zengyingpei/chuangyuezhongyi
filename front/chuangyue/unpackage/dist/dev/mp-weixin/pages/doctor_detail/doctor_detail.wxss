.doc_card {
  width: 690rpx;
  margin: 20rpx auto;
  border: 1px solid #eee;
  border-radius: 20rpx;
  box-shadow: 0 0 30rpx rgba(0, 0, 0, 0.06);
  display: flex;
}
.doc_card .doc_left_img {
  margin: 20rpx 20rpx;
  width: 200rpx;
}
.doc_card .doc_left_img .doc_images {
  width: 180rpx;
  height: 180rpx;
  border-radius: 50%;
}
.doc_card .doc_left_img .attention {
  margin-left: 35rpx;
  border: 2rpx solid #7ca0ec;
  border-radius: 20rpx;
  height: 50rpx;
  width: 100rpx;
  text-align: center;
  color: #7ca0ec;
}
.doc_card .doc_right_info {
  height: 200rpx;
}
.doc_card .doc_right_info .doc_info_top {
  width: 420rpx;
  padding-top: 20rpx;
}
.doc_card .doc_right_info .doc_info_top .doc_name {
  font-weight: bold;
  font-size: 50rpx;
  margin-right: 10rpx;
}
.doc_card .doc_right_info .doc_info_top .doc_level {
  font-size: 28rpx;
}
.doc_card .doc_right_info .doc_info_bom {
  margin-top: 10rpx;
}
.doc_card .doc_right_info .doc_info_bom .doc_info_bom_up {
  font-size: 28rpx;
  font-style: italic;
  margin-bottom: 5rpx;
}
.doc_card .doc_right_info .doc_score {
  margin-top: 40rpx;
  display: flex;
  line-height: 44rpx;
}
.doc_card .doc_right_info .doc_score .score {
  color: #7ca0ec;
  font-size: 40rpx;
}
