.buy_car {
  display: flex;
  justify-content: center;
  margin-bottom: 10rpx;
}
.buy_car image {
  width: 70rpx;
  height: 70rpx;
}
.buy_car .buy_car_text {
  padding-top: 10rpx;
  font-size: 44rpx;
}
.search {
  border-radius: 20rpx;
  display: flex;
  justify-content: center;
}
.search .search_box {
  border: 1rpx solid #6ea3e5;
  border-right-width: 0;
  border-top-left-radius: 20rpx;
  border-bottom-left-radius: 20rpx;
  padding-left: 10rpx;
  width: 75%;
  height: 80rpx;
  font-size: 35rpx;
  font-weight: lighter;
}
.search .icon {
  width: 80rpx;
  height: 100%;
  border-left-width: 0;
  border: 1rpx solid #6ea3e5;
}
.search .icon image {
  width: 80rpx;
  height: 70rpx;
}
.container {
  width: 690rpx;
  margin: 20rpx auto;
  border: 1rpx solid #eee;
  border-top-left-radius: 20rpx;
  border-top-right-radius: 20rpx;
  box-shadow: 0 0 40rpx rgba(0, 0, 0, 0.06);
  overflow: hidden;
}
.container .box .my_scroll {
  white-space: nowrap;
  width: 685rpx;
}
.container .box .my_scroll ::-webkit-scrollbar {
  display: none;
  width: 0;
  height: 0;
}
.container .box .my_scroll .sort {
  font-size: 40rpx;
  display: inline-block;
  width: 180rpx;
  height: 70rpx;
  padding: 10rpx 10rpx;
  text-align: center;
}
.container1 {
  margin: 20rpx auto;
  width: 690rpx;
  border: 1rpx solid #eee;
  border-radius: 20rpx;
}
.container1 .title {
  padding: 10rpx 10rpx;
  font-size: 50rpx;
  font-weight: bold;
  font-family: 黑体;
}
.container1 .body {
  display: flex;
  flex-wrap: wrap;
  flex-direction: row;
}
.container1 .body .item {
  width: 50%;
}
.container1 .body .item .item_img {
  width: 340rpx;
  height: 340rpx;
}
.container1 .body .item .item_img image {
  width: 340rpx;
  height: 340rpx;
}
.container1 .body .item .description {
  width: 340rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.container1 .body .item .item_bom {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  width: 340rpx;
  height: 60rpx;
  padding-top: 5rpx;
}
.container1 .body .item .item_bom .price {
  color: red;
}
.container1 .body .item .item_bom .add {
  width: 38rpx;
  height: 38rpx;
  padding-top: 5rpx;
  padding-right: 10rpx;
}
.container1 .body .item .item_bom .add image {
  width: 38rpx;
  height: 38rpx;
}